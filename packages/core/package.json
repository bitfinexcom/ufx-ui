{
  "name": "@ufx-ui/core",
  "version": "0.0.1",
  "description": "UI components",
  "main": "dist/ufx-core.cjs.js",
  "module": "dist/ufx-core.esm.js",
  "source": "src/index.js",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "bundle:sass": "scss-bundle -e src/ufx-core.scss -o dist/css/ufx-core.bundle.scss -p ./",
    "watch:sass": "npm run build:sass && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ufx-core.scss src/ufx-core.css --watch --recursive",
    "build:sass": "node-sass-chokidar --include-path ./src --include-path ./node_modules dist/css/ufx-core.bundle.scss src/ufx-core.css",
    "prefix:css": "postcss --use autoprefixer --use postcss-discard-comments -o dist/css/ufx-core.css src/ufx-core.css",
    "compress:css": "node-sass-chokidar --output-style compressed dist/css/ufx-core.css dist/css/ufx-core.min.css",
    "build:css": "run-s bundle:sass build:sass prefix:css compress:css",
    "prepare": "run-s build build:css"
  },
  "author": "Bitfinex",
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.10.1",
    "@rollup/plugin-url": "^5.0.1",
    "@svgr/rollup": "^5.4.0",
    "@ufx-ui/eslint-config": "^0.0.1",
    "autoprefixer": "^9.8.4",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.1.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-discard-comments": "^4.0.2",
    "rollup": "2.6.1",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-size-snapshot": "0.11.0",
    "rollup-plugin-terser": "5.3.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-regular-svg-icons": "^5.13.1",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@ufx-ui/utils": "^0.0.1",
    "bignumber.js": "^9.0.0",
    "classnames": "^2.2.6",
    "date-fns": "^2.16.1",
    "focus-trap-react": "^7.0.1",
    "formik": "^2.1.4",
    "i18next": "^19.5.1",
    "lodash": "^4.17.15",
    "memoize-one": "^5.1.1",
    "node-sass-chokidar": "^1.5.0",
    "prop-types": "^15.7.2",
    "qrcode.react": "^1.0.0",
    "rc-slider": "^9.6.4",
    "react-datepicker": "^3.3.0",
    "react-grid-layout": "^1.1.1",
    "react-i18next": "^11.7.0",
    "react-measure": "^2.3.0",
    "react-number-format": "^4.4.1",
    "react-popper-tooltip": "^2.11.1",
    "react-transition-group": "^4.4.1",
    "scss-bundle": "^3.1.2",
    "yup": "^0.29.1"
  }
}
